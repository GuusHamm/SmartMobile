<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="HackerFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/csi_green</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22dp</item>
    </style>
    <style name="HackerFont.Yellow" parent="HackerFont">
        <item name="android:textColor">@color/csi_miami_yellow</item>
    </style>
    <style name="HackerFont.Blue" parent="HackerFont">
        <item name="android:textColor">@color/csi_ny_blue</item>
    </style>
    <style name="HackerFont.Yellow.Bordered" parent="HackerFont.Yellow">
        <item name="android:background">@drawable/borderyellow</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="HackerFont.Blue.Bordered" parent="HackerFont.Blue">
        <item name="android:background">@drawable/borderblue</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="BorderGreen">
        <item name="android:background">@drawable/bordergreen</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="BorderYellow" parent="BorderGreen">
        <item name="android:background">@drawable/borderyellow</item>
    </style>
    <style name="BorderBlue" parent="BorderYellow">
        <item name="android:background">@drawable/borderblue</item>
    </style>
    <style name="MiamiBackground">
        <item name="android:background">#686868</item>
        <item name="android:backgroundTint">#4c4c4c</item>
        <item name="android:backgroundTintMode">src_over</item>
    </style>
    <style name="NYBackground">
        <item name="android:background">@color/csi_ny_grey</item>
        <item name="android:backgroundTint">#4c4c4c</item>
        <item name="android:backgroundTintMode">src_over</item>
    </style>

</resources>